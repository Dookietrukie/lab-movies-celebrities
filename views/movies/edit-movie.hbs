<h2>Edit</h2>

<form class="edit-form" action="/movies/{{movie._id}}/edit" method="POST">
    <label for="title">Title:</label>
    <input type="text" name="title" value="{{movie.title}}">

    <label for="genre">Genre:</label>
    <input type="text" name="genre" value="{{movie.genre}}">

    <label for="plot">Plot:</label>
    <textarea name="plot">{{movie.plot}}</textarea>

    <label for="cast">Cast:</label>
    <select name="cast" multiple>
        {{#each celebrity}}
        <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>

    <button type="submit">Update Movie</button>
</form>


<div class="go-home-container">
    <a class="button-link go-home" href="/movies">Back to Movies</a>
</div>